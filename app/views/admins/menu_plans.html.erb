    <!-- Modals for Editing -->

    <div class="modal fade bs-example-modal-md" id = 'editPlan1' tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-md">
            <div class="modal-content modal-md">
                <div class="modal-header modal-md">
                    <h5> <%= @plan1.name %> </h5>
                </div>
                <%= form_tag(admins_edit_plan_path, method: :post) do %>
                <div class="modal-body modal-md">
                    <input class='form-control' type='hidden' name='plan_id' value = '1' />
                    <input class='form-control' type='text' name='new_name' value = '<%= @plan1.name %>' />
                    <br>
                    <input class='form-control' type='number' name='new_price' value = '<%= @plan1.price %>' />
                    <br>
                    <textarea name='new_description' class="form-control" rows="10"><%=@plan1.description%></textarea>
                </div>
                <div class="modal-footer modal-md">
                    <%= submit_tag('Save Changes', class: 'btn btn-sm btn-danger') %>
                    <button type="button" class="btn btn-sm btn-default" data-dismiss="modal">Cancel</button>
                </div>
                <% end %>
            </div>
        </div>
    </div>

